{
  "name": "Discord to Claude (Simple)",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "discord-claude",
        "options": {}
      },
      "name": "Webhook Trigger",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [250, 300],
      "webhookId": "discord-claude"
    },
    {
      "parameters": {
        "jsCode": "// Extract message from Discord webhook\nconst content = $input.item.json.content || $input.item.json.message || 'No message';\nconst username = $input.item.json.username || 'Unknown';\n\nreturn [{\n  json: {\n    message: content,\n    user: username,\n    timestamp: new Date().toISOString()\n  }\n}];"
      },
      "name": "Parse Discord Message",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [450, 300]
    },
    {
      "parameters": {
        "jsCode": "const uuid = 'xxxxxxxx-xxxx-4xxx-yxxx-xxxxxxxxxxxx'.replace(/[xy]/g, function(c) {\n  const r = Math.random() * 16 | 0;\n  const v = c == 'x' ? r : (r & 0x3 | 0x8);\n  return v.toString(16);\n});\n\nreturn [{\n  json: {\n    sessionId: uuid,\n    message: $input.item.json.message,\n    user: $input.item.json.user\n  }\n}];"
      },
      "name": "Generate Session ID",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [650, 300]
    },
    {
      "parameters": {
        "command": "=claude -p \"{{ $json.message }}\" --session-id {{ $json.sessionId }} --dangerously-skip-permissions"
      },
      "name": "Ask Claude",
      "type": "n8n-nodes-base.ssh",
      "typeVersion": 1,
      "position": [850, 300],
      "credentials": {
        "sshPassword": {
          "id": "1",
          "name": "SSH account"
        }
      }
    },
    {
      "parameters": {
        "url": "YOUR_DISCORD_WEBHOOK_URL_HERE",
        "options": {},
        "bodyParametersJson": "={{ {\"content\": \"**Claude Response:**\\n```\\n\" + $json.output + \"\\n```\\n\\n_Session: \" + $json.sessionId + \"_\"} }}"
      },
      "name": "Send to Discord",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 3,
      "position": [1050, 300]
    }
  ],
  "connections": {
    "Webhook Trigger": {
      "main": [
        [
          {
            "node": "Parse Discord Message",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Parse Discord Message": {
      "main": [
        [
          {
            "node": "Generate Session ID",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Generate Session ID": {
      "main": [
        [
          {
            "node": "Ask Claude",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Ask Claude": {
      "main": [
        [
          {
            "node": "Send to Discord",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": {},
  "staticData": null,
  "tags": ["discord", "claude"]
}
