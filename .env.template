# Environment Variables for Orchestration System
# Copy this file to .env and fill in your actual values

# Anthropic API Key (get from console.anthropic.com)
# OPTIONAL if you already authenticated Claude Code with Pro subscription in WSL
# Required for Docker containers to use Claude Code
ANTHROPIC_API_KEY=

# Discord Bot Token (get from https://discord.com/developers/applications)
# REQUIRED for Discord integration
DISCORD_BOT_TOKEN=

# ngrok Auth Token (get from https://dashboard.ngrok.com)
# OPTIONAL - only needed if you want external webhook access
NGROK_AUTHTOKEN=

# n8n Configuration (optional overrides)
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme
N8N_HOST=localhost
N8N_PORT=5678
